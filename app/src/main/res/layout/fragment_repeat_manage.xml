<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout style="@style/PullDownStyle">
        <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="25dp">

                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/XUILayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:sStrokeColor="@color/colorPrimary"
                    app:sStrokeWidth="1dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/repeat_title_day"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:sCornersTopLeftRadius="8dp"
                        app:sCornersTopRightRadius="8dp"
                        android:gravity="center"
                        android:background="@color/colorPrimary"
                        app:sSolidColor="@color/colorPrimary"
                        android:text="每隔一日">
                    </TextView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/repeat_manage_day"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="2dp"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="30dp"
                        tools:listitem="@layout/mini_repeat" />
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/XUILayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:sStrokeColor="@color/colorPrimary"
                    app:sStrokeWidth="1dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/repeat_title_week"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:sCornersTopLeftRadius="8dp"
                        app:sCornersTopRightRadius="8dp"
                        android:gravity="center"
                        android:background="@color/colorPrimary"
                        app:sSolidColor="@color/colorPrimary"
                        android:text="每隔一周">
                    </TextView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/repeat_manage_week"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="30dp"
                        tools:listitem="@layout/mini_repeat" />
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/XUILayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:sStrokeColor="@color/colorPrimary"
                    app:sStrokeWidth="1dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/repeat_title_month"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:sCornersTopLeftRadius="8dp"
                        app:sCornersTopRightRadius="8dp"
                        android:gravity="center"
                        android:background="@color/colorPrimary"
                        app:sSolidColor="@color/colorPrimary"
                        android:text="每隔一月">
                    </TextView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginRight="4dp"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/repeat_manage_month"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="30dp"
                        tools:listitem="@layout/mini_repeat" />
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>