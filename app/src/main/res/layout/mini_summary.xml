<?xml version="1.0" encoding="utf-8"?>
<com.xuexiang.xui.widget.layout.XUILinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:id="@+id/summary_total"
        style="@style/XUILayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:sStrokeColor="@color/colorPrimary"
        app:sStrokeWidth="0.1dp"
        android:gravity="left|center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">
            <com.xuexiang.xui.widget.imageview.RadiusImageView
                android:id="@+id/summary_head"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/self_init_head"
                app:riv_border_color="@color/xui_config_color_gray_6"
                app:riv_border_width="1px"
                app:riv_is_circle="true"
                app:riv_selected_border_color="@color/xui_config_color_gray_4"
                app:riv_selected_border_width="1px"
                app:riv_selected_mask_color="@color/xui_config_color_gray_8" />
            <TextView
                android:id="@+id/summary_nickname"
                android:background="@null"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:padding="1dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxEms="7"
                android:text="盐以律己"
                android:textStyle="bold"
                android:textSize="12dip" />
        </LinearLayout>
        <TextView
            android:id="@+id/summary_title"
            android:background="@null"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"
            android:gravity="left"
            android:padding="1dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxEms="7"
            android:text="Hashmap底层实现原理"
            android:textStyle="bold"
            android:textSize="20dip" />
        <TextView
            android:id="@+id/summary_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:maxEms="15"
            android:ellipsize="end"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:padding="1dp"
            android:background="@null"
            android:text="HashMap是Java程序员使用频率最高的用于映射键值对 (key和value)处理的数据类型。. 随着JDK版本的跟新，JDK1.8对HashMap底层的实现进行了优化，列入引入红黑树的数据"
            android:textSize="15dip" />
        <TextView
            android:id="@+id/summary_edit_time"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:maxEms="7"
            android:ellipsize="end"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_gravity="right"
            android:padding="1dp"
            android:background="@null"
            android:text="2022-06-18"
            android:textSize="10dip" />

    </com.xuexiang.xui.widget.layout.XUILinearLayout>
</com.xuexiang.xui.widget.layout.XUILinearLayout>