<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/xui_config_color_background"
    android:orientation="vertical">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout style="@style/PullDownStyle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical">
            <com.xuexiang.xui.widget.layout.XUILinearLayout
                android:layout_marginRight="7dp"
                style="@style/XUILayout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:sStrokeColor="@color/colorPrimary"
                app:sStrokeWidth="0.1dp"
                android:weightSum="9"
                android:orientation="horizontal">
                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    style="@style/XUILayout"
                    android:layout_weight="3"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    app:sStrokeColor="@color/colorPrimary"
                    app:sStrokeWidth="0.1dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:text="总计待办"
                        android:textSize="15dip" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/statistic_total_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@null"
                            android:textStyle="bold"
                            android:text="5"
                            android:textSize="30dip" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:text="个"
                            android:textSize="15dip" />
                    </LinearLayout>

                </com.xuexiang.xui.widget.layout.XUILinearLayout>
                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    style="@style/XUILayout"
                    android:layout_weight="3"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    app:sStrokeColor="@color/colorPrimary"
                    app:sStrokeWidth="0.1dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:text="完成待办"
                        android:textSize="15dip" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/statistic_finish_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@null"
                            android:textStyle="bold"
                            android:text="5"
                            android:textSize="30dip" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:text="个"
                            android:textSize="15dip" />
                    </LinearLayout>
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    style="@style/XUILayout"
                    android:layout_weight="3"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    app:sStrokeColor="@color/colorPrimary"
                    app:sStrokeWidth="0.1dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:text="日完成率"
                        android:textSize="15dip" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|bottom"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/statistic_percent_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@null"
                            android:textStyle="bold"
                            android:text="100"
                            android:textSize="30dip" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="bottom"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:background="@null"
                            android:text="%"
                            android:textSize="15dip" />
                    </LinearLayout>
                </com.xuexiang.xui.widget.layout.XUILinearLayout>

            </com.xuexiang.xui.widget.layout.XUILinearLayout>
            <com.xuexiang.xui.widget.layout.XUILinearLayout
                android:layout_marginRight="7dp"
                style="@style/XUILayout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                app:sStrokeColor="@color/colorPrimary"
                app:sStrokeWidth="0.1dp"
                android:orientation="horizontal">
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_margin="10dp"
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.xuexiang.xui.widget.layout.XUILinearLayout>

            <com.xuexiang.xui.widget.layout.XUILinearLayout
                android:layout_marginRight="7dp"
                style="@style/XUILayout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                app:sStrokeColor="@color/colorPrimary"
                app:sStrokeWidth="0.1dp"
                android:orientation="horizontal">
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.xuexiang.xui.widget.layout.XUILinearLayout>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>