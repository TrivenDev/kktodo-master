<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout style="@style/PullDownStyle">
        <androidx.core.widget.NestedScrollView style="@style/ScrollViewStyle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="25dp">
                <com.xuexiang.xui.widget.textview.supertextview.SuperButton
                    android:id="@+id/add_category_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:sCornersTopLeftRadius="8dp"
                    app:sCornersTopRightRadius="8dp"
                    app:sSolidColor="@color/colorPrimary"
                    android:text="添加新类别">
                </com.xuexiang.xui.widget.textview.supertextview.SuperButton>
                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/XUILayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:sStrokeColor="@color/colorPrimary"
                    app:sStrokeWidth="1dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.xuexiang.xui.widget.layout.ExpandableLayout
                        android:id="@+id/add_category"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        app:el_duration="1000"
                        app:el_expanded="false">
                        <com.xuexiang.xui.widget.layout.XUILinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/category_add_color"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorPrimary"/>
                        <EditText
                            android:id="@+id/category_add_name"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:maxLines="1"
                            android:maxEms="7"
                            android:ellipsize="end"
                            android:layout_gravity="center"
                            android:gravity="center|left"
                            android:padding="1dp"
                            android:text="日常"
                            android:textSize="20dip" />
                        <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                            android:id="@+id/category_add"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/category_add_icon"
                            android:backgroundTint="@color/colorPrimary">
                        </com.xuexiang.xui.widget.button.shadowbutton.ShadowButton>
                    </com.xuexiang.xui.widget.layout.XUILinearLayout>
                    </com.xuexiang.xui.widget.layout.ExpandableLayout>
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/XUILayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    app:sStrokeColor="@color/colorPrimary"
                    app:sStrokeWidth="1dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/category_manage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="30dp"
                        tools:listitem="@layout/mini_category"
                        />
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>